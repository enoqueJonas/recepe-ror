<% if recipe.user == current_user %>
<div class="flex gap-20 my-8 w-5/6 h-32 border-2 border-black p-2">
<div class="flex flex-col gap-7 pt-2 w-1/6">
  <%= link_to recipe.name, recipe_path(recipe) %>
  <div class="py-2">
    <%= button_to "Remove",
                  recipe_path(recipe),
                  method: :delete,
                  class: "bg-white hover:bg-gray-100 text-gray-800 font-semibold py-1 px-2 border border-gray-400 rounded shadow" %>
  
  </div>
  </div>
  <div class="w-full p-2 text-ellipsis overflow-hidden">
  <%= recipe.description %>
  </div>
</div>
<% end %>
