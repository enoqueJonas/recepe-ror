<%= render 'shared/menu' %>
<div class="flex flex-col content-center items-center">
    <h1 class="text-4xl font-extrabold dark:text-white m-5">Public Recipes</h1>
        <% @recipes.each do |recipe| %>
            <div class="flex justify-between gap-20 my-8 w-5/6 h-32 border-2 border-black p-2">
            <div class="flex flex-col gap-4 p-2 w-1/6 font-semibold">
                <p> <%= recipe.name %> </p>
                <p>By: <%= recipe.user_name %>
            </div>

            <div class='flex flex-col gap-4 p-2 w-4/6 font-semibold'> 
                <p>Total food items: <%= recipe.total_quantity %> </p>
                <p>Total price: <%= recipe.total_price %>
            </div>
        </div>
        <% end %>
    </div>
</div>
