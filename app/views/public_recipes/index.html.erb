<%= render 'shared/menu' %>
<div class='recipes-wrapper'>
    <h1>Public Recipes</h1>
    <ul>
        <% @recipes.each do |recipe| %>
        <li>
            <a href = <%= "#{recipes_url}/#{recipe.id}" %> >
                <div class='recipe-description'> 
                    <p> <%= recipe.name %> </p>
                    <p>By: <%= recipe.user_name %>
                </div>

                <div class='recipe-info'> 
                    <p>Total food items: <%= recipe.total_quantity %> </p>
                    <p>Total price: <%= recipe.total_price %>
                </div>
            </a>
        </li>
        <% end %>
    </ul>
</div>